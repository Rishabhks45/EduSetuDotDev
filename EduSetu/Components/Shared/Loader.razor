
@* This should be a full page loader and should overlay the entire screen *@
<div hidden="@(!IsLoading)">
    <div class="fixed inset-0 w-full h-full bg-white/30 z-[9999] flex items-center justify-center">
        <div class="flex gap-4">
            <!-- Square button with spinner -->
            <div class="w-12 h-12 bg-blue-600 rounded-xl flex items-center justify-center">
                <div class="w-6 h-6 border-2 border-white/30 border-t-white rounded-full spinner"></div>
            </div>
            
            <!-- Rectangular button with text and dot -->
            <div class="px-4 py-2 bg-blue-600 rounded-lg flex items-center gap-2">
                <div class="w-2 h-2 bg-gray-300 rounded-full animate-pulse"></div>
                <span class="text-white font-medium">Loading...</span>
            </div>
        </div>
    </div>
</div>

@code {

    // Use this to set the visibility based on the "Loading State" of the application
    [Parameter]
    public bool IsLoading { get; set; }

}
