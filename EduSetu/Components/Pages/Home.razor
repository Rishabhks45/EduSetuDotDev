    private void SetActiveFilter(string filter)
    {
        activeFilter = filter;
        ApplyFilters();
    }

    private void ApplyFilters()
    {
        filteredAnnouncements = activeFilter == "all"
            ? announcements
            : announcements.Where(a => a.Type == activeFilter).ToList();
    }

    private void ReadAnnouncement(Announcement announcement)
    {
        NavigationManager.NavigateTo($"/announcements/{announcement.Id}");
    }

