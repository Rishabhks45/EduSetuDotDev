@page "/register"
@layout AuthLayout
@using System.ComponentModel.DataAnnotations
@using Blazored.FluentValidation
@using EduSetu.Components.Layout
@using EduSetu.Domain.Enums
@using Microsoft.AspNetCore.Components.Forms
@inject NavigationManager NavigationManager

<div class="min-h-screen flex flex-col md:flex-row">
    <!-- Left Section - Branding -->
    <div class="w-full md:w-1/2 flex items-center justify-center bg-blue-50 dark:bg-blue-900 p-8">
        <div class="max-w-md text-center flex flex-col">
            <div class="flex justify-center">
                <div class="flex items-center gap-2 text-primary-600 dark:text-primary-400">
                    <div class="p-3 bg-primary-100 dark:bg-primary-900 rounded-full">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                        </svg>
                    </div>
                </div>
            </div>
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-3">
                Join EduNotes Community
            </h2>
            <p class="text-gray-600 dark:text-gray-300 mb-8">
                Start your learning journey with thousands of students worldwide
            </p>

            <!-- Sign In Button (Now at Bottom) -->
            <div class="mt-auto pt-4">
                <NavLink href="/login" class="inline-flex items-center gap-2 px-6 py-2 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg shadow-sm hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors group">
                    <svg class="w-5 h-5 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
                    </svg>
                    <span class="text-sm font-medium text-gray-700 dark:text-gray-300 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">Sign In</span>
                </NavLink>
            </div>
        </div>
    </div>
    <!-- Right Section - Form -->
    <div class="w-full md:w-1/2 flex items-stretch items-center justify-center dark:bg-gray-900">
        <div class="w-full flex">
            <div class="bg-white dark:bg-gray-800 w-full py-6 sm:py-8 px-4 sm:px-6 lg:px-10 shadow-xl border border-gray-100 dark:border-gray-700">
                <!-- Google Sign Up - Primary CTA -->
                <div class="flex flex-row items-center mb-4 max-w-2xl mx-auto">
                    <div class="flex-1 flex justify-center">
                        <div class="text-center">
                            <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-2">Quick Registration</h3>
                            @if (selectedUserRole == UserRole.Student)
                            {
                                <p class="text-sm text-gray-600 dark:text-gray-400">Create your account instantly with Google</p>
                            }
                            else
                            {
                                <p class="text-sm text-gray-600 dark:text-gray-400">Create your account with email</p>
                            }
                        </div>
                    </div>
                    <div class="relative w-64">
                        <!-- Icon -->
                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                            <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0v7" />
                            </svg>
                        </div>

                        <!-- Select -->
                        <!-- Select -->
                        <InputSelect @bind-Value="selectedUserRole"
                                     class="block w-full pl-10 pr-8 h-[40px]
                    dark:bg-gray-700 border-0 border-b-2
                    border-gray-300 dark:border-gray-600
                    focus:outline-none focus:border-primary-500
                    bg-transparent text-gray-900 dark:text-white
                    dark:focus:border-gray-300">
                            <option value="@UserRole.Student">@UserRole.Student</option>
                            <option value="@UserRole.Teacher">@UserRole.Teacher</option>
                        </InputSelect>

                    </div>

                </div>
                @if (selectedUserRole == UserRole.Student)
                {
                    <div class="mb-4 max-w-2xl mx-auto">
                        <div class="flex justify-center">
                            <button type="button" @onclick="HandleGoogleSignup" class="flex items-center justify-center gap-3 w-full bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg px-4 py-3 text-gray-700 dark:text-gray-200 hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors shadow-sm">
                                <svg class="w-5 h-5" viewBox="0 0 24 24">
                                    <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" />
                                    <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" />
                                    <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" />
                                    <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" />
                                </svg>
                                <span class="font-medium">Continue with Google</span>
                            </button>
                        </div>
                    </div>

                    <div class="relative mb-6">
                        <div class="absolute inset-0 flex items-center">
                        </div>
                        <div class="relative flex justify-center text-sm">
                            <span class="px-2 bg-white dark:bg-gray-800 text-gray-500 dark:text-gray-400">Or create account with email</span>
                        </div>
                    </div>
                }
                @if (selectedUserRole == UserRole.Student)
                {
                    <EditForm Model="StudentformData" OnValidSubmit="HandleStudentSubmitAsync" class="space-y-6">
                        <FluentValidationValidator />
                        <div class="space-y-6">
                            <!-- Section Header -->
                            <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4">Personal Information</h3>

                            <!-- Grid Layout -->
                            <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">

                                <!-- First Name -->
                                <div>
                                    <label for="firstName" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                        First Name <span class="text-red-500">*</span>
                                    </label>

                                    <div class="relative">
                                        <!-- Icon -->
                                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                            <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                                      d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                            </svg>
                                        </div>

                                        <!-- Input with underline only -->
                                        <InputText id="firstName" @bind-Value="StudentformData.FirstName"
                                                   class="block w-full pl-10 pr-3 h-[40px]
                                                                                  border-0 border-b-2 border-gray-300 dark:border-gray-600
                                                                                          focus:outline-none focus:border-primary-500 dark:focus:border-gray-300
                                                                                  bg-transparent text-gray-900 dark:text-white"
                                                   placeholder="Enter your first name" />
                                    </div>

                                    <ValidationMessage For="@(() => StudentformData.FirstName)"
                                                       class="text-red-500 dark:text-red-400 text-sm" />
                                </div>


                                <!-- Last Name -->
                                <div>
                                    <label for="lastName" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                        Last Name <span class="text-red-500">*</span>
                                    </label>
                                    <div class="relative">
                                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                            <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                                            </svg>
                                        </div>
                                        <InputText id="lastName" @bind-Value="StudentformData.LastName"
                                                   class="block w-full pl-10 pr-3 h-[40px]
                                                                                      border-0 border-b-2 border-gray-300 dark:border-gray-600
                                                                                      focus:outline-none focus:border-primary-500
                                                                                      bg-transparent text-gray-900 dark:text-white
                                                                                      dark:focus:border-gray-300"
                                                   placeholder="Enter your last name" />
                                    </div>
                                    <ValidationMessage For="@(() => StudentformData.LastName)" class="text-red-500 dark:text-red-400 text-sm" />
                                </div>

                                <!-- Email -->
                                <div>
                                    <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                        Email Address <span class="text-red-500">*</span>
                                    </label>
                                    <div class="relative">
                                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                            <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                            </svg>
                                        </div>
                                        <InputText id="email" type="email" @bind-Value="StudentformData.Email"
                                                   class="block w-full pl-10 pr-3 h-[40px]
                                                                                  border-0 border-b-2 border-gray-300 dark:border-gray-600
                                                                                  focus:outline-none focus:border-primary-500
                                                                                  bg-transparent text-gray-900 dark:text-white
                                                                                  dark:focus:border-gray-300"
                                                   placeholder="Enter your email address" />
                                    </div>
                                    <ValidationMessage For="@(() => StudentformData.Email)" class="text-red-500 dark:text-red-400 text-sm" />
                                </div>

                                <!-- Phone Number -->
                                <div>
                                    <label for="phoneNumber" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                        Phone Number <span class="text-red-500">*</span>
                                    </label>
                                    <div class="relative">
                                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                            <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                            </svg>
                                        </div>
                                        <InputText id="phoneNumber" @bind-Value="StudentformData.PhoneNumber"
                                                   class="block w-full pl-10 pr-3 h-[40px]
                                                                                  border-0 border-b-2 border-gray-300 dark:border-gray-600
                                                                                  focus:outline-none focus:border-primary-500
                                                                                  bg-transparent text-gray-900 dark:text-white
                                                                                  dark:focus:border-gray-300"
                                                   placeholder="Enter phone number (optional)" />
                                    </div>
                                    <ValidationMessage For="@(() => StudentformData.PhoneNumber)" class="text-red-500 dark:text-red-400 text-sm" />
                                </div>

                                <!-- Date of Birth -->
                                <div class="md:col-span-2">
                                    <label for="dateOfBirth" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                        Date of Birth
                                    </label>
                                    <div class="relative">
                                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                            <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
                                            </svg>
                                        </div>
                                        <InputDate id="dateOfBirth" @bind-Value="StudentformData.DateOfBirth"
                                                   class="block w-full pl-10 pr-3 h-[40px]
                                                                                  border-0 border-b-2 border-gray-300 dark:border-gray-600
                                                                                  focus:outline-none focus:border-primary-500
                                                                                  bg-transparent text-gray-900 dark:text-white
                                                                                  dark:focus:border-gray-300" />
                                    </div>
                                    <ValidationMessage For="@(() => StudentformData.DateOfBirth)" class="text-red-500 dark:text-red-400 text-sm" />
                                </div>

                                <!-- Password -->
                                <div>
                                    <label for="password" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                        Password <span class="text-red-500">*</span>
                                    </label>
                                    <div class="relative">
                                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                            <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c0-1.657-1.343-3-3-3s-3 1.343-3 3m12 0c0-1.657-1.343-3-3-3s-3 1.343-3 3m-6 0v6h12v-6" />
                                            </svg>
                                        </div>
                                        <InputText id="password" type="password" @bind-Value="StudentformData.Password"
                                                   class="block w-full pl-10 pr-3 h-[40px]
                                                                                  border-0 border-b-2 border-gray-300 dark:border-gray-600
                                                                                  focus:outline-none focus:border-primary-500
                                                                                  bg-transparent text-gray-900 dark:text-white
                                                                                  dark:focus:border-gray-300"
                                                   placeholder="Enter password" />
                                    </div>
                                    <ValidationMessage For="@(() => StudentformData.Password)" class="text-red-500 dark:text-red-400 text-sm" />
                                </div>

                                <!-- Confirm Password -->
                                <div>
                                    <label for="confirmPassword" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                        Confirm Password <span class="text-red-500">*</span>
                                    </label>
                                    <div class="relative">
                                        <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                            <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 11c0-1.657-1.343-3-3-3s-3 1.343-3 3m12 0c0-1.657-1.343-3-3-3s-3 1.343-3 3m-6 0v6h12v-6" />
                                            </svg>
                                        </div>
                                        <InputText id="confirmPassword" type="password" @bind-Value="StudentformData.ConfirmPassword"
                                                   class="block w-full pl-10 pr-3 h-[40px]
                                                                                  border-0 border-b-2 border-gray-300 dark:border-gray-600
                                                                                  focus:outline-none focus:border-primary-500
                                                                                  bg-transparent text-gray-900 dark:text-white
                                                                                  dark:focus:border-gray-300"
                                                   placeholder="Confirm password" />
                                    </div>
                                    <ValidationMessage For="@(() => StudentformData.ConfirmPassword)" class="text-red-500 dark:text-red-400 text-sm" />
                                </div>
                            </div>

                            <!-- Buttons -->
                            <div class="flex justify-end gap-4 pt-4">

                                <!-- Submit -->
                                <button type="submit" disabled="@isLoading"
                                        class="flex items-center gap-2 px-6 py-2 bg-primary-600 hover:bg-primary-700
                                                               text-white rounded-lg transition-colors disabled:opacity-50
                                                               dark:bg-primary-700 dark:hover:bg-primary-800">
                                    @if (isLoading)
                                    {
                                        <div class="animate-spin rounded-full h-5 w-5 border-b-2 border-white"></div>
                                    }
                                    else
                                    {
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z" />
                                        </svg>
                                    }

                                    <span>@(isLoading ? "Creating Account..." : "Create Account")</span>
                                </button>
                            </div>
                        </div>
                    </EditForm>

                }
                else if (selectedUserRole == UserRole.Teacher)
                {
                    <!-- Progress Steps -->
                    <div class="mb-6 sm:mb-8">
                        <div class="flex items-center justify-between px-1 sm:px-2 overflow-hidden">
                            @for (int i = 0; i < steps.Length; i++)
                            {
                                var step = steps[i];
                                <div class="flex items-center">
                                    <div class="@GetStepClass(i) w-6 h-6 sm:w-8 sm:h-8 md:w-9 md:h-9 flex items-center justify-center">
                                        @if (i < currentStep)
                                        {
                                            <svg class="w-3 h-3 sm:w-4 sm:h-4 md:w-5 md:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                            </svg>
                                        }
                                        else
                                        {
                                            <span class="text-[10px] xs:text-xs sm:text-sm font-medium">@(i + 1)</span>
                                        }
                                    </div>
                                    @if (i < steps.Length - 1)
                                    {
                                        <div class="@GetStepLineClass(i) w-4 xs:w-6 sm:w-12 md:w-16 lg:w-24 xl:w-[281px]"></div>
                                    }
                                </div>
                            }
                        </div>
                    </div>


                    <!-- Step 1: Personal Information -->
                    @if (currentStep == 1)
                    {
                        <div class="space-y-6">
                            <EditForm Model="TeacherformData" OnValidSubmit="HandleFirstStepTeacherSubmitAsync" class="space-y-6">
                                <FluentValidationValidator />

                                <div>
                                    <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4">Personal Information</h3>
                                    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
                                        <div>
                                            <label for="firstName" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                                First Name *
                                            </label>
                                            <div class="relative">
                                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                    <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                                    </svg>
                                                </div>
                                                <InputText id="firstName" name="firstName" @bind-value="TeacherformData.FirstName"
                                                           class="block w-full pl-10 pr-3 h-[40px]
                                                                                                          border-0 border-b-2 border-gray-300 dark:border-gray-600
                                                                                                          focus:outline-none focus:border-primary-500
                                                                                                          bg-transparent text-gray-900 dark:text-white
                                                                                                          dark:focus:border-gray-300"
                                                           placeholder="Enter your first name" />
                                            </div>
                                            <ValidationMessage For="@(() => TeacherformData.FirstName)" class="text-red-500 dark:text-red-400 text-sm" />
                                        </div>

                                        <div>
                                            <label for="lastName" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                                Last Name *
                                            </label>
                                            <div class="relative">
                                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                    <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                                    </svg>
                                                </div>
                                                <InputText id="lastName" name="lastName" @bind-value="TeacherformData.LastName"
                                                           class="block w-full pl-10 pr-3 h-[40px]
                                                                                                                  border-0 border-b-2 border-gray-300 dark:border-gray-600
                                                                                                                  focus:outline-none focus:border-primary-500
                                                                                                                  bg-transparent text-gray-900 dark:text-white
                                                                                                                  dark:focus:border-gray-300"
                                                           placeholder="Enter your last name" />
                                            </div>
                                            <ValidationMessage For="@(() => TeacherformData.LastName)" class="text-red-500 dark:text-red-400 text-sm" />
                                        </div>

                                        <div>
                                            <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                                Email Address *
                                            </label>
                                            <div class="relative">
                                                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                    <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                                    </svg>
                                                </div>
                                                <InputText id="email" name="email" type="email" @bind-value="TeacherformData.Email"
                                                           class="block w-full pl-10 pr-3 h-[40px]
                                                                                                                  border-0 border-b-2 border-gray-300 dark:border-gray-600
                                                                                                                  focus:outline-none focus:border-primary-500
                                                                                                                  bg-transparent text-gray-900 dark:text-white
                                                                                                                  dark:focus:border-gray-300"
                                                           placeholder="Enter your email address" />
                                            </div>
                                            <ValidationMessage For="@(() => TeacherformData.Email)" class="text-red-500 dark:text-red-400 text-sm" />
                                        </div>

                                        <div>
                                            <label for="phoneNumber" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                                Phone Number
                                            </label>
                                            <div class="relative">
