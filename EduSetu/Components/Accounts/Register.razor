@page "/register"
@layout AuthLayout
@using System.ComponentModel.DataAnnotations
@using EduSetu.Components.Layout
@using Microsoft.AspNetCore.Components.Forms
@inject NavigationManager NavigationManager

<div class="min-h-screen flex flex-col md:flex-row">
    <!-- Left Section - Branding -->
    <div class="w-full md:w-1/2 flex items-center justify-center bg-blue-50 dark:bg-blue-900 p-8">
        <div class="max-w-md text-center flex flex-col">
            <div class="flex justify-center">
                <div class="flex items-center gap-2 text-primary-600 dark:text-primary-400">
                    <div class="p-3 bg-primary-100 dark:bg-primary-900 rounded-full">
                        <svg class="w-8 h-8" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                        </svg>
                    </div>
                </div>
            </div>
            <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-3">
                Join EduNotes Community
            </h2>
            <p class="text-gray-600 dark:text-gray-300 mb-8">
                Start your learning journey with thousands of students worldwide
            </p>
            
            <!-- Sign In Button (Now at Bottom) -->
            <div class="mt-auto pt-4">
                <NavLink href="/login" class="inline-flex items-center gap-2 px-6 py-2 bg-white dark:bg-gray-800 border border-gray-200 dark:border-gray-700 rounded-lg shadow-sm hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors group">
                    <svg class="w-5 h-5 text-primary-600 dark:text-primary-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 16l-4-4m0 0l4-4m-4 4h14m-5 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h7a3 3 0 013 3v1"></path>
                    </svg>
                    <span class="text-sm font-medium text-gray-700 dark:text-gray-300 group-hover:text-primary-600 dark:group-hover:text-primary-400 transition-colors">Sign In</span>
                </NavLink>
            </div>
        </div>
    </div>
    <!-- Right Section - Form -->
    <div class="w-full md:w-1/2 flex items-stretch items-center justify-center dark:bg-gray-900">
        <div class="w-full flex">
            <div class="bg-white dark:bg-gray-800 w-full py-6 sm:py-8 px-4 sm:px-6 lg:px-10 shadow-xl border border-gray-100 dark:border-gray-700">
                <!-- Google Sign Up - Primary CTA -->
                <div class="mb-8 max-w-2xl mx-auto">
                    <div class="text-center mb-4">
                        <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-2">Quick Registration</h3>
                        <p class="text-sm text-gray-600 dark:text-gray-400">Create your account instantly with Google</p>
                    </div>
                    <div class="flex justify-center">
                        <button type="button" @onclick="HandleGoogleSignup" class="flex items-center justify-center gap-3 w-full bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 rounded-lg px-4 py-3 text-gray-700 dark:text-gray-200 hover:bg-gray-50 dark:hover:bg-gray-600 transition-colors shadow-sm">
                            <svg class="w-5 h-5" viewBox="0 0 24 24">
                                <path fill="#4285F4" d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" />
                                <path fill="#34A853" d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" />
                                <path fill="#FBBC05" d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" />
                                <path fill="#EA4335" d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" />
                            </svg>
                            <span class="font-medium">Continue with Google</span>
                        </button>
                    </div>
                </div>

                <div class="relative mb-6">
                    <div class="absolute inset-0 flex items-center">
                        <div class="w-full border-t border-gray-300 dark:border-gray-600"></div>
                    </div>
                    <div class="relative flex justify-center text-sm">
                        <span class="px-2 bg-white dark:bg-gray-800 text-gray-500 dark:text-gray-400">Or create account with email</span>
                    </div>
                </div>

                <!-- Progress Steps -->
                <div class="mb-6 sm:mb-8">
                    <div class="flex items-center justify-between px-1 sm:px-2 overflow-hidden">
                        @for (int i = 0; i < steps.Length; i++)
                        {
                            var step = steps[i];
                            <div class="flex items-center">
                                <div class="@GetStepClass(i) w-6 h-6 sm:w-8 sm:h-8 md:w-9 md:h-9 flex items-center justify-center">
                                    @if (i < currentStep)
                                    {
                                        <svg class="w-3 h-3 sm:w-4 sm:h-4 md:w-5 md:h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                                        </svg>
                                    }
                                    else
                                    {
                                        <span class="text-[10px] xs:text-xs sm:text-sm font-medium">@(i + 1)</span>
                                    }
                                </div>
                                @if (i < steps.Length - 1)
                                {
                                    <div class="@GetStepLineClass(i) w-4 xs:w-6 sm:w-12 md:w-16 lg:w-24 xl:w-32"></div>
                                }
                            </div>
                        }
                    </div>
                </div>

                <EditForm Model="formData" OnValidSubmit="HandleSubmit" class="space-y-6">
                    <DataAnnotationsValidator />

                    <!-- Step 1: Personal Information -->
                    @if (currentStep == 1)
                    {
                        <div class="space-y-6">
                            <div>
                                <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4">Personal Information</h3>
                                <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 sm:gap-6">
                                    <div>
                                        <label for="firstName" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                            First Name *
                                        </label>
                                        <div class="relative">
                                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                                </svg>
                                            </div>
                                            <InputText id="firstName" name="firstName" @bind-value="formData.FirstName"
                                                       class="block w-full pl-10 h-[40px] pr-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors h-[40px] bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
                                                       placeholder="Enter your first name" />
                                        </div>
                                        <ValidationMessage For="@(() => formData.FirstName)" class="text-red-500 dark:text-red-400 text-sm" />
                                    </div>

                                    <div>
                                        <label for="lastName" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                            Last Name *
                                        </label>
                                        <div class="relative">
                                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                                </svg>
                                            </div>
                                            <InputText id="lastName" name="lastName" @bind-value="formData.LastName"
                                                       class="block w-full pl-10 h-[40px] pr-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors h-[40px] bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
                                                       placeholder="Enter your last name" />
                                        </div>
                                        <ValidationMessage For="@(() => formData.LastName)" class="text-red-500 dark:text-red-400 text-sm" />
                                    </div>

                                    <div>
                                        <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                            Email Address *
                                        </label>
                                        <div class="relative">
                                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 4.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                                                </svg>
                                            </div>
                                            <InputText id="email" name="email" type="email" @bind-value="formData.Email"
                                                       class="block w-full pl-10 h-[40px] pr-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors h-[40px] bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
                                                       placeholder="Enter your email address" />
                                        </div>
                                        <ValidationMessage For="@(() => formData.Email)" class="text-red-500 dark:text-red-400 text-sm" />
                                    </div>

                                    <div>
                                        <label for="phoneNumber" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                            Phone Number
                                        </label>
                                        <div class="relative">
                                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                                                </svg>
                                            </div>
                                            <InputText id="phoneNumber" name="phoneNumber" @bind-value="formData.PhoneNumber"
                                                       class="block w-full pl-10 h-[40px] pr-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors h-[40px] bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
                                                       placeholder="Enter phone number (optional)" />
                                        </div>
                                        <ValidationMessage For="@(() => formData.PhoneNumber)" class="text-red-500 dark:text-red-400 text-sm" />
                                    </div>

                                    <div class="md:col-span-2">
                                        <label for="dateOfBirth" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                            Date of Birth
                                        </label>
                                        <div class="relative">
                                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
                                                </svg>
                                            </div>
                                            <InputDate id="dateOfBirth" name="dateOfBirth" @bind-value="formData.DateOfBirth"
                                                       class="block w-full pl-10 h-[40px] pr-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors h-[40px] bg-white dark:bg-gray-700 text-gray-900 dark:text-white" />
                                        </div>
                                        <ValidationMessage For="@(() => formData.DateOfBirth)" class="text-red-500 dark:text-red-400 text-sm" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Step 2: Academic Information -->
                    @if (currentStep == 2)
                    {
                        <div class="space-y-6">
                            <div>
                                <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4">Academic Information</h3>

                                <!-- Institution Type -->
                                <div class="mb-6">
                                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-3">
                                        Institution Type *
                                    </label>
                                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                                        @foreach (var type in institutionTypes)
                                        {
                                            <button type="button" @onclick="() => SelectInstitutionType(type.Value)"
                                                    class="@GetInstitutionTypeClass(type.Value) flex items-center gap-3 p-4 rounded-lg border-2 transition-colors">
                                                <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                                </svg>
                                                <span class="font-medium">@type.Label</span>
                                            </button>
                                        }
                                    </div>
                                </div>

                                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                                    <div>
                                        <label for="institution" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                            Institution *
                                        </label>
                                        <div class="relative">
                                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                                            </svg>
                                                </div>
                                            <InputSelect id="institution" name="institution" @bind-value="formData.Institution"
                                                         class="block  w-full pl-10 h-[40px] pr-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors h-[40px] bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
                                                <option value="">Select Institution</option>
                                                @foreach (var institution in institutions)
                                                {
                                                    <option value="@institution">@institution</option>
                                                }
                                            </InputSelect>
                                        </div>
                                        <ValidationMessage For="@(() => formData.Institution)" class="text-red-500 dark:text-red-400 text-sm" />
                                    </div>

                                    <div>
                                        <label for="course" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                            Course/Program *
                                        </label>
                                        <div class="relative">
                                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5z"></path>
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
                                                </svg>
                                            </div>
                                            <InputSelect id="course" name="course" @bind-value="formData.Course"
                                                         class="block  w-full pl-10 h-[40px] pr-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors h-[40px] bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
                                                <option value="">Select Course</option>
                                                @foreach (var course in courses)
                                                {
                                                    <option value="@course">@course</option>
                                                }
                                            </InputSelect>
                                        </div>
                                        <ValidationMessage For="@(() => formData.Course)" class="text-red-500 dark:text-red-400 text-sm" />
                                    </div>

                                    @if (formData.InstitutionType == "school")
                                    {
                                        <div>
                                            <label for="board" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                                Board *
                                            </label>
                                            <InputSelect id="board" name="board" @bind-value="formData.Board"
                                                         class="w-full p-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
                                                <option value="">Select Board</option>
                                                @foreach (var board in boards)
                                                {
                                                    <option value="@board">@board</option>
                                                }
                                            </InputSelect>
                                            <ValidationMessage For="@(() => formData.Board)" class="text-red-500 dark:text-red-400 text-sm" />
                                        </div>
                                    }

                                    @if (formData.InstitutionType == "university")
                                    {
                                        <div>
                                            <label for="semester" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                                Semester
                                            </label>
                                            <InputSelect id="semester" name="semester" @bind-value="formData.Semester"
                                                         class="w-full p-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
                                                <option value="">Select Semester</option>
                                                @foreach (var semester in semesters)
                                                {
                                                    <option value="@semester">@semester</option>
                                                }
                                            </InputSelect>
                                        </div>
                                    }

                                    <div>
                                        <label for="year" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                            Academic Year
                                        </label>
                                        <InputSelect id="year" name="year" @bind-value="formData.Year"
                                                     class="w-full p-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors bg-white dark:bg-gray-700 text-gray-900 dark:text-white">
                                            @foreach (var year in years)
                                            {
                                                <option value="@year">@year</option>
                                            }
                                        </InputSelect>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Step 3: Account Setup -->
                    @if (currentStep == 3)
                    {
                        <div class="space-y-6">
                            <div>
                                <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4">Account Setup</h3>
                                <div class="space-y-6">
                                    <div>
                                        <label for="username" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                            Username *
                                        </label>
                                        <div class="relative">
                                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                                                </svg>
                                            </div>
                                            <InputText id="username" name="username" @bind-value="formData.Username"
                                                       class="block  w-full pl-10 h-[40px] pr-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors h-[40px] bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
                                                       placeholder="Choose a unique username" />
                                        </div>
                                        <ValidationMessage For="@(() => formData.Username)" class="text-red-500 dark:text-red-400 text-sm" />
                                    </div>

                                    <div>
                                        <label for="password" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                            Password *
                                        </label>
                                        <div class="relative">
                                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                                                </svg>
                                            </div>
                                            <InputText id="password" name="password" type="@(showPassword ? "text" : "password")" @bind-value="formData.Password"
                                                       class="block w-full pl-10 pr-12 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                                                       placeholder="Create a strong password" />
                                            <button type="button" @onclick="TogglePasswordVisibility"
                                                    class="absolute inset-y-0 right-0 pr-3 flex items-center">
                                                @if (showPassword)
                                                {
                                                    <svg class="h-5 w-5 text-gray-400 hover:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.878 9.878L3 3m6.878 6.878L21 21"></path>
                                                    </svg>
                                                }
                                                else
                                                {
                                                    <svg class="h-5 w-5 text-gray-400 hover:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                                    </svg>
                                                }
                                            </button>
                                        </div>
                                        <ValidationMessage For="@(() => formData.Password)" class="text-red-500 dark:text-red-400 text-sm" />
                                    </div>

                                    <div>
                                        <label for="confirmPassword" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                            Confirm Password *
                                        </label>
                                        <div class="relative">
                                            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                                                <svg class="h-5 w-5 text-gray-400 dark:text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
                                                </svg>
                                            </div>
                                            <InputText id="confirmPassword" name="confirmPassword" type="@(showConfirmPassword ? "text" : "password")" @bind-value="formData.ConfirmPassword"
                                                       class="block w-full pl-10 pr-12 py-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                                                       placeholder="Confirm your password" />
                                            <button type="button" @onclick="ToggleConfirmPasswordVisibility"
                                                    class="absolute inset-y-0 right-0 pr-3 flex items-center">
                                                @if (showConfirmPassword)
                                                {
                                                    <svg class="h-5 w-5 text-gray-400 hover:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.878 9.878L3 3m6.878 6.878L21 21"></path>
                                                    </svg>
                                                }
                                                else
                                                {
                                                    <svg class="h-5 w-5 text-gray-400 hover:text-gray-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z"></path>
                                                    </svg>
                                                }
                                            </button>
                                        </div>
                                        <ValidationMessage For="@(() => formData.ConfirmPassword)" class="text-red-500 dark:text-red-400 text-sm" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Step 4: Preferences -->
                    @if (currentStep == 4)
                    {
                        <div class="space-y-6">
                            <div>
                                <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-100 mb-4">Preferences & Interests</h3>

                                <!-- Interests -->
                                <div class="mb-6">
                                    <label class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                        Academic Interests
                                    </label>
                                    <div class="flex flex-wrap gap-2 mb-3">
                                        @foreach (var interest in formData.Interests)
                                        {
                                            <span class="inline-flex items-center gap-1 px-3 py-1 bg-primary-100 text-primary-800 text-sm rounded-full">
                                                @interest
                                                <button type="button" @onclick="() => RemoveInterest(interest)" class="hover:text-primary-900">
                                                    Ã—
                                                </button>
                                            </span>
                                        }
                                    </div>
                                    <div class="flex gap-2 mb-3">
                                        <InputText @bind-value="interestInput" placeholder="Add your interests"
                                                   class="flex-1 p-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500" />
                                        <button type="button" @onclick="AddInterest"
                                                class="px-4 py-3 bg-primary-600 text-white rounded-lg hover:bg-primary-700 transition-colors">
                                            Add
                                        </button>
                                    </div>
                                    <div class="flex flex-wrap gap-2">
                                        @foreach (var subject in subjectInterests)
                                        {
                                            <button type="button" @onclick="() => AddSubjectInterest(subject)"
                                                    class="px-3 py-1 text-xs bg-gray-100 hover:bg-gray-200 text-gray-700 rounded-full transition-colors">
                                                + @subject
                                            </button>
                                        }
                                    </div>
                                </div>

                                <!-- Bio -->
                                <div class="mb-6">
                                    <label for="bio" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2">
                                        Bio (Optional)
                                    </label>
                                    <InputTextArea id="bio" name="bio" @bind-value="formData.Bio" rows="4"
                                                   class="w-full p-3 border border-gray-300 dark:border-gray-600 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 resize-none bg-white dark:bg-gray-700 text-gray-900 dark:text-white"
                                                   placeholder="Tell us a bit about yourself and your academic goals..." />
                                </div>

                                <!-- Terms and Newsletter -->
                                <div class="space-y-4">
                                    <div class="flex items-start">
                                        <InputCheckbox id="agreeToTerms" name="agreeToTerms" @bind-value="formData.AgreeToTerms"
                                                       class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 dark:border-gray-600 rounded mt-1" />
                                        <label for="agreeToTerms" class="ml-2 block text-sm text-gray-700 dark:text-gray-300">
                                            I agree to the <a href="/terms" class="text-primary-600 hover:text-primary-700 font-medium">Terms of Service</a> and <a href="/privacy" class="text-primary-600 hover:text-primary-700 font-medium">Privacy Policy</a> *
                                        </label>
                                    </div>
                                    <ValidationMessage For="@(() => formData.AgreeToTerms)" class="text-red-500 dark:text-red-400 text-sm" />

                                    <div class="flex items-center">
                                        <InputCheckbox id="subscribeNewsletter" name="subscribeNewsletter" @bind-value="formData.SubscribeNewsletter"
                                                       class="h-4 w-4 text-primary-600 focus:ring-primary-500 border-gray-300 dark:border-gray-600 rounded" />
                                        <label for="subscribeNewsletter" class="ml-2 block text-sm text-gray-700 dark:text-gray-300">
                                            Subscribe to our newsletter for updates and study tips
                                        </label>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Navigation -->
                    <div class="flex items-center justify-between pt-6 border-t border-gray-200 dark:border-gray-700">
                        <div class="text-sm text-gray-600 dark:text-gray-400">
                            Step @currentStep of @steps.Length
                        </div>

                        <div class="flex gap-3">
                            @if (currentStep > 1)
                            {
                                <button type="button" @onclick="PreviousStep"
                                        disabled="@isLoading"
                                        class="px-6 py-2 border border-gray-300 dark:border-gray-600 text-gray-700 dark:text-gray-300 rounded-lg hover:bg-gray-50 dark:hover:bg-gray-700 transition-colors disabled:opacity-50">
                                    Previous
                                </button>
                            }

                            @if (currentStep < steps.Length)
                            {
                                <button type="button" @onclick="NextStep"
                                        disabled="@isLoading"
                                        class="px-6 py-2 bg-primary-600 hover:bg-primary-700 text-white rounded-lg transition-colors disabled:opacity-50 dark:bg-primary-700 dark:hover:bg-primary-800">
                                    Next
                                </button>
                            }
                            else
                            {
                                <button type="submit" disabled="@isLoading"
                                        class="flex items-center gap-2 px-6 py-2 bg-primary-600 hover:bg-primary-700 text-white rounded-lg transition-colors disabled:opacity-50 dark:bg-primary-700 dark:hover:bg-primary-800">
                                    @if (isLoading)
                                    {
                                        <div class="animate-spin rounded-full h-5 w-5 border-b-2 border-white"></div>
                                    }
                                    else
                                    {
                                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M18 9v3m0 0v3m0-3h3m-3 0h-3m-2-5a4 4 0 11-8 0 4 4 0 018 0zM3 20a6 6 0 0112 0v1H3v-1z"></path>
                                        </svg>
                                    }
                                    <span>@(isLoading ? "Creating Account..." : "Create Account")</span>
                                </button>
                            }
                        </div>
                    </div>
                </EditForm>

               @*  <!-- Already have account -->
                <div class="mt-6 text-center">
                    <p class="text-sm text-gray-600">
                        Already have an account? <NavLink href="/login" class="font-medium text-primary-600 hover:text-primary-500 transition-colors">Sign in here</NavLink>
                    </p>
                </div> *@
            </div>
        </div>
    </div>
</div>

